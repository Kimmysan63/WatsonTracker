@model WatsonTracker.ViewModels.AssignProjectManagerToProject

@using (Html.BeginForm("AssignProjectManagerToProject", "Projects", FormMethod.Post, new { @class = "bg-info" }))
{
    <h2 class="bg-info">Assign Project Manager to Project</h2>


    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h4></h4>



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Project List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.ProjectId, null, "--Select--", htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.UserList, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Project Manager List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.ProjectManagerId, null, "--Select--", htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.ProjectUser, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
        @*<a href="@Url.Action("UserDashboard", "Dashboard")></a>*@
        <hr />
    </div>
}

<div class="col-sm-12">
    <div class="white-box">
        <h3 class="box-title">Project Manager / Projects Reference Table</h3>
        <div class="table-responsive">
            <table class="table color-bordered-table info-bordered-table table-striped">
                <thead>
                    <tr>
                        <th>
                            Projects Manager Id
                        </th>
                        <th>
                            Project Name
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.Projects)
                    {
                        <tr>
                            <td>
                                @project.PMName
                            </td>
                            <td>
                                <p>@project.Name</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

