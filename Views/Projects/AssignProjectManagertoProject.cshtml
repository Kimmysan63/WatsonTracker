@model WatsonTracker.ViewModels.AssignProjectManagerToProject
<h2>Assign Project Manager to Project</h2>

@using (Html.BeginForm("AssignProjectManagerToProject", "Projects", FormMethod.Post))
{


    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h4></h4>
        <hr />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Project List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ProjectId, null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.UserList, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Project Manager List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ProjectManagerId, null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.ProjectUser, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Projects Manager Id
            <th>
                Project Name
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>
                    @project.PMName
                </td>
                <td>
                    <p>@project.Name</p>
                </td>
            </tr>
        }
    </tbody>
</table>