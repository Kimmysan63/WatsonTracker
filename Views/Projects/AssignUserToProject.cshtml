@model WatsonTracker.Models.AssignUserToProjectViewModel
@{
    ViewBag.Title = "AddUserToProject";
}


@using (Html.BeginForm("AssignUserToProject", "Projects", FormMethod.Post, new { @class = "bg-info" }))
{
<h2 class="bg-info">Assign Project Users</h2>


    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        @*<hr />*@


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("User List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.UserId, null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.UserList, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Project List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.ProjectId, null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.ProjectUser, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
        <hr />
    </div>
}

<div class="col-sm-12">
    <div class="white-box">
        <h3>Users / Projects Reference Table</h3>
        <div class="table-responsive">
            <table class="table color-bordered-table info-bordered-table table-striped">
                    <thead>
                        <tr>
                            <th>
                                User Name
                            </th>
                            <th>
                                Projects
                            </th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProjectUser)
                        {
                            <tr>
                                <td>
                                    @item.FirstName @item.LastName
                                </td>
                                <td>
                                    @foreach (var proj in item.Projects)
                                    {
                                        <p>@proj.Name</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


